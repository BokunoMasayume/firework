{
    "compilerOptions": {
        "target": "ES5",
        "lib": ["ESNext", "DOM"],
        "module": "ESNext",
        "downlevelIteration": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "declaration": true,
        "moduleResolution": "Node",
        "emitDeclarationOnly": true,
        "declarationDir": "./src/@types",
        "paths":{},
        "typeRoots": ["./src/@types"]

    },
    "include": ["src"],
    "exclude": ["node_modules"]
}